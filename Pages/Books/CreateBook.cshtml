@page
@model WebApplication1.Pages.Books.CreateBookModel
@{
}


<h1> Create a New Book</h1>
@if(Model.ErrorMessage.Length>0)
{
    <div id="error-div">
        <br><div class="alert-danger">@Model.ErrorMessage</div><br />
        <button type="button" onclick="
           document.getElementById('error-div').remove() ">
</button>
    </div>
    
}
@if (Model.SuccessMessage.Length > 1)
{
    <div id="Success-div">
        <br><div class="alert-success">@Model.SuccessMessage</div><br />
        <button type="button" onclick="
           document.getElementById('Success-div').remove() ">
        </button>
    </div>

}
<form method="post">
    <div class="row mb-3">
        <label class="col-sm-12 col-form-label">Book Id</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="id" required/>
        </div>
    </div>
     <div class="row mb-3">
        <label class="col-sm-12 col-form-label">Book Title</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="title" required />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-12 col-form-label">Book category</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="category" required />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-12 col-form-label">Book Author</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="Author" required />
        </div>
    </div>
     <div class="row mb-3">
        <label class="col-sm-12 col-form-label">Book Pubication</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="Pubication" required />
        </div>
    </div>
     <div class="row mb-3">
        <label class="col-sm-12 col-form-label">Book publish_date</label>
        <div class="col-sm-5">
            <input type="date" class="form-control" name="publish_date" required />
        </div>
    </div>
     <div class="row mb-3">
        <label class="col-sm-12 col-form-label">Book book_edition</label>
        <div class="col-sm-5">
            <input type="number" class="form-control" name="book_edition" required />
        </div>
    </div>
     <div class="row mb-3">
        <label class="col-sm-12 col-form-label">Book Price</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="Price" required />
        </div>
    </div>
    
    <div class="row mb-3">
        <div class="col-sm-5">
                <button type="submit" class="btn btn-success">Submit</button>
        </div>
        <br />
        <div class="col-sm-5">
            <a  class="btn btn-danger" href="/">Cancel</a>
        </div>
    </div>
</form>